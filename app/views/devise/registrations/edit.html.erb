<h2>Settings</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :name %>
  <%= f.input :email %>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, label: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>
  <%= f.input :current_password %>

  <div class="form-actions">
    <%= f.submit "Submit" , class: "btn btn-primary" %>
  </div>
<% end %>

<br>
<h4>Cancel Your Account</h4>
<p>
  <%= link_to "Click here", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %> to cancel your account 
</p>
<br>